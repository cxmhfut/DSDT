<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="#eee"
    tools:ignore="UselessParent">

    <TextView
        android:id="@+id/grade_list_score"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="99"
        android:textColor="@color/colorGreen"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/grade_list_module"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/grade_list_score"
        android:gravity="center"
        android:padding="8dp"
        android:text="顺序答题"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/grade_list_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/grade_list_module"
        android:gravity="center"
        android:padding="8dp"
        android:text="2016/5/19"
        android:textSize="18sp" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBlue"/>

</RelativeLayout>